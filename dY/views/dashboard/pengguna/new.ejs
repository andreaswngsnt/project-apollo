<% include ../../partials/headerDashboard %>

<div class="main-panel">
    <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute fixed-top">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <a class="navbar-brand" href="#pablo">Pengguna Baru</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
        </div>
    </nav>
    <div class="content">
        <div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header card-header-icon card-header-rose">
							<div class="card-icon">
								<i class="material-icons">person</i>
							</div>
						</div>
						<div class="card-body">
							<h4 class="card-title">Informasi Dasar</h4>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<label for="nama">Nama Lengkap</label>
										<input name="name" type="text" class="form-control" id="nama" required>
									</div>
									<div class="form-group">
										<label for="email">Email</label>
										<input name="email" type="email" class="form-control" id="email" required>
									</div>
									<div class="form-group">
										<label for="password">Password</label>
										<input name="password" type="password" class="form-control" id="password" required>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="kelamin">Jenis Kelamin</label>
										<select class="selectpicker" data-size="2" data-style="btn btn-info btn-round" id="kelamin" required>
											<option value="male">Laki-laki</option>
											<option value="female">Perempuan</option>
										</select>
									</div>
									<div class="form-group">
										<label for="tanggalLahir">Tanggal Lahir</label>
										<input type="text" class="form-control datepicker" value="10/05/2016" id="tanggalLahir" required>
										<small class="form-text text-muted">Format: HH/BB/TTTT</small>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="fileinput fileinput-new" data-provides="fileinput">
										<label>Foto Profil</label>
										<div class="fileinput-new thumbnail">
											<img src="/assets/img/blogs/image_placeholder.jpg" alt="...">
										</div>
										<div class="fileinput-preview fileinput-exists thumbnail"></div>
										<div>
											<span class="btn btn-info btn-round btn-file">
												<span class="fileinput-new">Upload Foto</span>
												<span class="fileinput-exists">Ganti Foto</span>
												<input type="file" name="..." />
											</span>
										</div>
									</div>
								</div>
							</div>
							<hr>
							<h4 class="card-title">Informasi Dokter</h4>
							<div class="row">
								<div class="col-md-12">
									<div class="togglebutton">
										<label>
											<input type="checkbox">
											<span class="toggle"></span>
											Profil Dokter
										</label>
									</div>
								</div>
							</div>
							<hr>
							<h4 class="card-title">Informasi Pasien</h4>
							<div class="row">
								<div class="col-md-12">
									<div class="togglebutton">
										<label>
											<input type="checkbox">
											<span class="toggle"></span>
											Profil Pasien
										</label>
									</div>
								</div>
							</div>
							<hr>
							<h4 class="card-title">Informasi Lain</h4>
							<div class="row">
								<div class="col-md-12">
									<div class="togglebutton">
										<label>
											<input type="checkbox">
											<span class="toggle"></span>
											Akses Admin
										</label>
									</div>
								</div>
							</div>
						</div>
						<div class="card-footer ">
							<button type="submit" class="btn btn-fill btn-primary">Buat Profil baru</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
</script>

